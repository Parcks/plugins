[
  {
    "name":"Laravel installer",
    "type":"shell",
    "cmds":[
      {
        "root":false,
        "do":[
          "composer global require laravel/installer"
        ]
      }
    ]
  },
  {
    "name":"Add Laravel to path",
    "type":"file-append",
    "destination-path":"~/.profile",    
    "contents":"export PATH=$PATH:`composer config home -g`/vendor/bin/laravel"
  },
  {
    "name":"Reload path",
    "type":"shell",
    "cmds":[
      {
        "root":false,
        "do":[
          "source ~/.profile"
        ]
      }
    ]
  }
]
